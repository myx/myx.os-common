echo "myx.common: sh-login" >&2
ENV=~/.shrc; export ENV
export PS1="`whoami`@\\H:\\w % "

# # no need, will execute anyway
# . /usr/local/share/myx.common/include/console/bash/common

if [ "$TERM" != screen ] && [ ! -z "$SSH_CONNECTION" ] && [ -x "$(which screen)" ] ; then
	if [ -x "$(which bash)" ] ; then
		export SHELL=$(which bash)
	fi
	$(which screen) -q -O -U -D -R
fi
