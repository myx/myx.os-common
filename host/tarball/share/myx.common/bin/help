#!/usr/bin/env bash

# This script is universal for FreeBSD, Darwin, Ubuntu.

Help(){
	echo "'myx.common' script commands:"
	
	for ITEM in $(find "/usr/local/share/myx.common/bin" -type f | sed "s,/usr/local/share/myx.common/bin/,,g" | sort); do
		echo "  $ITEM"
	done
}

case "$0" in
	*/myx.common/bin/help) 
		set -e
		Help "$@"
	;;
esac
