#!/bin/sh

##### !!! This script is universal for FreeBSD, Darwin, Ubuntu. !!! #####


type GetWheelGroupNames >/dev/null 2>&1 || \
	. "/usr/local/share/myx.common/bin/os/getWheelGroupNames"

GetWheelGroupName(){
	if [ "$1" = "--print-first" ] ; then
		echo "$2"
		exit 0
	fi
	GetWheelGroupName --print-first `GetWheelGroupNames`
}


case "$0" in
	*/myx.common/bin/os/getWheelGroupName) 
		if [ "$1" = "--help" ] ; then
			echo "Syntax: myx.common os/getWheelGroupName" >&2
			echo "Returns: array of os-dependent wheel/admin/sudo user group (first group of os/getWheelGroupNames)" >&2
			exit 1
		fi
		set -e
		GetWheelGroupName --print-first `GetWheelGroupNames`
	;;
esac
