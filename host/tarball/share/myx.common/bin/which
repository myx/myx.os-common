#!/bin/sh

# This script is universal for FreeBSD, Darwin, Ubuntu.

Which(){
	local COMMAND="$1"
	[ -z "$COMMAND" ] && echo "Which: COMMAND argument is required!" && exit 1
	local CHECK="/usr/local/share/myx.common/bin/$COMMAND"
	[ -f "$CHECK" ] && echo "$CHECK" && return 0
	return 1
}

case "$0" in
	*/myx.common/bin/which) 
		if [ -z "$1" ] ; then
			echo "Syntax: myx.common which MYX-COMMON-COMMAND" >&2
			echo "    outputs a full path to stdout or dies with error exit code." >&2
			exit 1
		fi
		set -e
		Which $@
	;;
esac
