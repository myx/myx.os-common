#!/bin/sh

##### !!! This script is universal for FreeBSD, Darwin, Ubuntu. !!! #####

GitClonePull(){
	local TGT_DIR="$1"
	[ -z "$TGT_DIR" ] && echo "lib/gitClonePull: TGT_DIR is required!" >&2 && exit 1

	local SRC_URL="$2"
	[ -z "$SRC_URL" ] && echo "lib/gitClonePull: SRC_URL is required!" >&2 && exit 1

	local BRANCH="$3"
	
	local PWD="`pwd`"
	
	[ -d "$TGT_DIR" ] && ({
		cd "$TGT_DIR"
		git rev-parse --abbrev-ref HEAD > /dev/null \
				&& [ "`git rev-parse --abbrev-ref HEAD`" != "${BRANCH:-master}" ] \
				&& cd "$TGT_DIR/.." \
				&& rm -rf "$TGT_DIR" \
			|| true
	}) || true;
	[ -d "$TGT_DIR" ] || ({
	    echo "$TGT_DIR: creating..."
	    mkdir -p "$TGT_DIR"
	    git clone "$SRC_URL" "$TGT_DIR"
	});
	[ -d "$TGT_DIR" ] && ({
	    cd "$TGT_DIR"
	    echo "$TGT_DIR: updating..."
	    git remote set-url origin "$SRC_URL"
	    [ -n $BRANCH ] && git checkout $BRANCH
	    git pull
	    echo "$TGT_DIR: finished."
	}) || true;
	
	cd "$PWD"
}

case "$0" in
	*/myx.common/bin/lib/gitClonePull) 
		if [ -z "$1" ] ; then
			echo "Syntax: myx.common lib/gitClonePull [--no-write] dst_path repo_url [branch]" >&2
			echo "    If 'branch' argument is not set, 'master' will be used." >&2
			echo "    Should be equivalent to: 'myx.common lib/gitCloneSync --no-push'." >&2
			exit 1
		fi
		set -e
		GitClonePull "$@"
	;;
esac
