#!/bin/sh

##### !!! This script is universal for FreeBSD, Darwin, Ubuntu. !!! #####

ExecShStdin(){
	sh -c 'eval "`cat`"'
}

case "$0" in
	*/myx.common/bin/lib/execShStdin) 
		if [ "--help" = "$1" ] ; then
			echo "Syntax: myx.common lib/execShStdin [--bash]" >&2
			exit 1
		fi
		set -e

		if [ "--bash" = "$1" ] ; then
			if [ ! -n "$BASH_VERSION" ] || [ "5913621" != "` cat <( echo 5913621 ) 2> /dev/null `" ] ; then
				bash -c 'eval "`cat`"'
				exit 0
			fi
			shift
		fi

		eval "`cat`"
	;;
esac
