#!/bin/sh

##### !!!    This script is universal for FreeBSD, Darwin, Ubuntu.    !!! #####
##### !!! THIS SCRIPT MAY BE OVERRIDEN IN OS-DEPENDENT IMPLEMENTATION !!! #####

set -e

# It is better to be autonomous in this command, so instead of:
#   . /usr/local/share/myx.common/include/subr-freebsd.sh
#   UserRequireRoot
# we do:
test `id -u` != 0 && echo 'ERROR: Must be root!' && exit 1

for PKG in bash rsync screen sudo $@ ; do
	myx.common lib/installEnsurePackage $PKG
done
