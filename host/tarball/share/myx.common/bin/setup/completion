#!/bin/sh

. /usr/local/share/myx.common/include/subr-universal.sh

echo "Setting up completion for: $HOME"

InternReplaceLine "$HOME/.bashrc" " ### myx.common completion ###$" "complete -W '\`myx.common help --bare\`' myx.common  ### myx.common completion ###"
InternReplaceLine "$HOME/.cshrc" " ### myx.common completion ###$" "complete myx.common 'p/*/\`myx.common help --bare\`/' ### myx.common completion ###"
